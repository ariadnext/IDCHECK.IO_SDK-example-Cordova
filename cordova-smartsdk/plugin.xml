<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-smartsdk" version="2.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>IDCHECK.IO SDK Plugin</name>
    <description>A Custom plugin to simplify IDCHECKIO Sdk integration</description>
    <keywords>cordova,plugin,ariadnext,sdk,IDCHECK.IO</keywords>
    <js-module name="SmartsdkModule" src="www/cordova-smartsdk.js">
        <clobbers target="cordova-smartsdk" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="SmartsdkModule">
                <param name="android-package" value="com.ariadnext.sdk.SmartsdkModule" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <framework src="com.android.support:multidex:1.0.3" />
        <framework src="com.squareup.okhttp3:okhttp:3.11.0" />
        <framework src="com.android.support:design:28.0.0" />
        <framework src="com.google.android.gms:play-services-vision:17.0.2" />
        <framework src="com.fasterxml.jackson.core:jackson-databind:2.9.2" />
        <framework src="au.com.datasymphony:EasyFlow:1.3.1" />
        <framework src="com.android.support:appcompat-v7:28.0.0" />
        <framework custom="true" src="android/sdk.gradle" type="gradleReference" />
        <source-file src="android/SmartsdkModule.java" target-dir="src/com/ariadnext/sdk" />
    </platform>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="SmartsdkModule">
                <param name="ios-package" value="SmartsdkModule" />
		<param name="onload" value="true" />
            </feature>
        </config-file>
	<config-file target="*-Info.plist" parent="NSCameraUsageDescription">
        	<string>Camera is being used to scan documents</string>
	</config-file>
	<source-file src="ios/SmartsdkKeys.h" />
        <source-file src="ios/SmartsdkModule.m" />
	<source-file src="ios/SmartsdkModule.h" />
    </platform>
</plugin>
